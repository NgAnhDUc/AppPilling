<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_alignParentBottom="true"
        android:background="@drawable/union_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:textColor="@color/white"
        android:id="@+id/back_btn"
        android:padding="0dp"
        android:textSize="20dp"
        android:textColorHint="#8E8E8E"
        android:hint="&lt;"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/ellipse_4"
        android:backgroundTint="@color/white" />
    <LinearLayout
        android:id="@+id/title"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Welcome Back!"
            android:textSize="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18dp"
            android:text="Enter Your Username And Password"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edt"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:layout_below="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="40dp"
            android:textSize="26dp"
            android:text="CMND/CCCD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/username_edt"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@android:color/transparent"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@drawable/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:textSize="26dp"
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/password_edt"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@android:color/transparent"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:src="@drawable/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_btn"
            android:layout_marginTop="40dp"
            android:textSize="30dp"
            android:textColorHint="@color/white"
            android:hint="LOGIN"
            android:background="@drawable/buttonblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="30dp"
            android:textColor="#6B6B6B"
            android:text="Forgotten Password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/signup_btn"
            android:textColor="#6B6B6B"
            android:text="Or Create a New Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>